{{- $iconNormal := env "WAYBAR_ICON_COLOR" -}}
{{- $iconImportant := env "WAYBAR_IMPORTANT_COLOR" -}}
{{- if eq $iconImportant "" }}
{{- $iconImportant = "#e60053" -}}
{{- end -}}
{{- if eq $iconNormal "" }}
{{- $iconNormal = "#2e9ef4" -}}
{{- end -}}
{
    "network": {
        "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "format": "{icon}",
        "format-wifi": "<span color=\"{{ $iconNormal }}\">{icon}</span>",
        "format-ethernet": "<span color=\"{{ $iconNormal }}\">󰀂</span>",
        "format-disconnected": "<span color=\"{{ $iconImportant }}\">󰤮</span>",
        "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 3,
        "spacing": 1,
        "on-click": "networkmanager_dmenu"
    },
    "bluetooth": {
      "format": "<span color=\"{{ $iconNormal }}99\"></span>",
      "format-disabled": "", // "<span color=\"{{ $iconImportant }}\">󰂲</span>",
      "format-connected": "<span color=\"{{ $iconNormal }}\"></span>",
      "tooltip-format": "Devices connected: {num_connections}",
      "on-click": "dmenu-bluetooth" // "blueberry"
    },
    "hyprland/workspaces": {
        "sort-by": "id",
        "format": "{icon}",
        "format-icons": {
            "web": "",
            "term": "",
            "code": "",
            "chat": "",
            "zoom": "󰍫",
            "media": "",
            "work": "",
        }
    },
    "hyprland/window": {
        "separate-outputs": true,
    },
    "hyprland/windowcount": {
        "format": "[{0}]",
    },
    "custom/fullscreen": {
        "format": "<big>{icon}</big>",
        "format-icons": {
            "default": "󰁌"
        }
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    // "sway/window": {
    //   "max-length": 400,
    // },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}% ",
        "format-disconnected": "Disconnected ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
        "unknown-tag": "N/A",
        "interval": 2,
        "consume-icons": {
            "on": " "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\"></span> ",
            "on": " "
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": "1 "
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "tray": {
        "icon-size": 16,
        "spacing": 6
    },
    "clock": {
        "timezone": "Europe/Warsaw",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "<big></big> {:%H:%M:%S}",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {usage}%",
        "format-icons": {
            "default": ""
        },
        "tooltip": false
    },
    "memory": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {percentage}%",
        "format-icons": {
            "default": ""
        },
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },
    "backlight": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip": false,
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 15,
            "critical": 10
        },
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {capacity}%",
        "format-charging": "<span color=\"{{ $iconNormal }}\"> {icon}</span> {capacity}%",
        "format-plugged": "<span color=\"{{ $iconNormal }}\"> {icon}</span> {capacity}%",
        "format-alt": "<span color=\"{{ $iconNormal }}\">{icon}</span> {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "group/audio": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 600,
        "children-class": "audio-group-item",
        "click-to-reveal": false,
      },
      "modules": [
          "pulseaudio",
          "custom/vrp10",
          {{ if eq .chezmoi.hostname "redeye" }}"custom/audioshare-client",{{ end }}
          {{ if eq .chezmoi.hostname "silverspoon" }}"custom/audioshare",{{ end }}
      ]
    },
    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {volume}% {format_source}",
        "format-bluetooth": "<span color=\"{{ $iconNormal }}\"> {icon}</span> {volume}% {format_source}",
        "format-bluetooth-muted": "<span color=\"{{ $iconImportant }}\">󰂲 {icon}</span> {format_source}",
        "format-muted": "<span color=\"{{ $iconImportant }}\">󰖁</span> {format_source}",
        "format-source": "<span color=\"{{ $iconNormal }}\"></span> {volume}%",
        "format-source-muted": "<span color=\"{{ $iconImportant }}\"></span>",
        "format-icons": {
            "headphone": "󰋋",
            "hands-free": "󰋎",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "on-click-right": "systemctl --user restart pipewire.service"
    },
    "group/tray-expander": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 600,
        "children-class": "tray-group-item"
      },
      "modules": ["custom/expand-icon", "custom/expand-spacer", "tray"]
    },
    "custom/expand-icon": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}{0}</span>",
        "format-icons": {
            "default": ""
        },
    },
    "custom/expand-spacer": {
        "format": "<span color=\"{{ $iconNormal }}\">  </span>",
        "format-icons": {
            "default": ""
        },
    },
    "custom/shadowplay": {
        "format": "<span color=\"#bd2c40\">{icon} {0}</span>",
        "interval": 360,
        "signal": 15,
        "exec": "pgrep wl-screenrec -a | sed 's,.* -o \\([^ ]*\\).*,\\1,'",
        "format-icons": {
            "default": "雷"
        },
    },
    "custom/screnrecord": {
        "format": "<span color=\"#bd2c40\">{icon} Rec</span>",
        "signal": 21,
        "exec": "pgrep -x wf-recorder",
        "format-icons": {
            "default": "󰑋"
        },
    },
    "custom/notmuch": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 60,
        "signal": 25,
        "exec": "c() { u=\"$(notmuch count -- tag:unread and tag:inbox)\"; i=\"$(notmuch count --  tag:inbox)\"; if [[ $u != \"0\" ]]; then echo $u/$i; else echo \"\"; fi }; c",
        "on-click": "email",
        "format-icons": {
            "default": ""
        },
    },
    "custom/memory_left": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 30,
        "exec": "free -h | grep 'Mem' | awk '{print $7 \" (\"$4\")\"}'",
        "format-icons": {
            "default": ""
        },
    },
    "custom/date": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 60,
        "exec": "date +'%a, %b %e'",
        "format-icons": {
            "default": ""
        },
        "on-click": "terminal-float -e khal interactive"
    },
    "custom/time": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 1,
        "exec": "env TZ='Europe/Warsaw' date +'%H:%M:%S'",
        "format-icons": {
            "default": ""
        },
    },
    "custom/time_uk": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 60,
        "exec": "env TZ='Europe/London' date +'%H:%M'",
        "format-icons": {
            "default": "UK"
        },
    },
    "custom/gamemode": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 3600,
        "signal": 17,
        "exec": "$HOME/.scripts/waybar/gaming.sh",
        "format-icons": {
            "default": ""
        },
        "on-click-right": "$HOME/.scripts/waybar/gaming.sh --toggle; pkill -RTMIN+17 -x waybar"
    },
    "custom/dualsense": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 600,
        "signal": 18,
        "exec": "$HOME/.scripts/waybar/dualsense.sh",
        "format-icons": {
            "default": ""
        },
        "on-click": "pkill -RTMIN+18 -x waybar"
    },
    "custom/logipro": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 600,
        "signal": 16,
        "exec": "$HOME/.scripts/waybar/logipro.sh",
        "format-icons": {
            "default": "󰍽"
        },
        "on-click": "pkill -RTMIN+16 -x waybar"
    },
    "custom/bt_kyria": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 600,
        "signal": 15,
        "exec": "$HOME/.scripts/waybar/bt_battery.sh F3:1C:1A:A4:D1:61",
        "format-icons": {
            "default": "󰰊"
        },
        "on-click": "pkill -RTMIN+15 -x waybar"
    },
    "custom/bt_dactyl": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 600,
        "signal": 14,
        "exec": "$HOME/.scripts/waybar/bt_battery.sh F2:8A:E4:9E:DC:8C",
        "format-icons": {
            "default": "󰯵"
        },
        "on-click": "pkill -RTMIN+14 -x waybar"
    },
    "custom/bt_xbox": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 600,
        "signal": 13,
        "exec": "$HOME/.scripts/waybar/bt_battery.sh 40:8E:2C:16:B7:E5 100",
        "format-icons": {
            "default": "󰖺"
        },
        "on-click": "pkill -RTMIN+13 -x waybar"
    },
    "custom/weather": {
        "format": "{}",
        //"return-type": "json",
        "format-icons": {
            "default": ""
        },
        "escape": false,
        "exec": "zsh -c $HOME/.scripts/waybar/weather.zsh 2> /dev/null", // Script in resources folder
        "on-click": "browser https://pogoda.interia.pl"
    },
    "custom/switches": {
        "format": "<span color=\"{{ $iconImportant }}\"></span>  ",
        "format-icons": {
            "default": ""
        },
        "escape": false,
        "on-click": "$HOME/.scripts/sway/hidden-switches.sh"
    },
    "custom/hubstaff": {
        "interval": 60,
        "signal": 19,
        "exec": "$HOME/.scripts/waybar/hubstaff.sh",
        "on-click": "hubstaff toggle"
    },
    "custom/audioshare-client": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 3600,
        "signal": 20,
        "exec": "$HOME/.scripts/waybar/audioshare-client.sh",
        "format-icons": {
            "default": "󱀞"
        },
        "on-click": "$HOME/.scripts/waybar/audioshare-client.sh toggle; pkill -RTMIN+20 -x waybar"
    },
    "custom/audioshare": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 3600,
        "signal": 20,
        "exec": "$HOME/.scripts/waybar/audioshare.sh",
        "format-icons": {
            "default": "󱀞"
        },
        "on-click": "$HOME/.scripts/waybar/audioshare.sh toggle; pkill -RTMIN+20 -x waybar"
    },
    "custom/vrp10": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "interval": 3600,
        "signal": 20,
        "exec": "$HOME/.scripts/waybar/vrp10.sh",
        "format-icons": {
            "default": "󱡏"
        },
        "on-click": "$HOME/.scripts/waybar/vrp10.sh toggle; pkill -RTMIN+20 -x waybar"
    },
    "custom/media": {
        "format": "{icon} {0}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "default": "🎜"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/battery-conservation": {
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "format-icons": {
            "default": ""
        },
        "signal": 12,
        "on-click": "$HOME/.scripts/sway/conservation.sh toggle; pkill -RTMIN+12 -x waybar",
        "exec": "$HOME/.scripts/waybar/conservation.sh",

    },
    "custom/power": {
        "format": "<span color=\"{{ $iconImportant }}\">{icon}</span>",
        "format-icons": {
            "default": "⏻"
        },
        "on-click": "$HOME/.scripts/waybar/powermenu",
    },
    "custom/media_sync": {
        "interval": 5,
        "format": "<span color=\"{{ $iconNormal }}\">{icon}</span> {0}",
        "format-icons": {
            "default": "󱊞"
        },
        "exec": "$HOME/.scripts/waybar/media_sync.sh",
        "on-click": "sync",
    },
}
