general {
    lock_cmd = hyprlock
    before_sleep_cmd = hyprlock
    ignore_dbus_inhibit = false
    ignore_systemd_inhibit = false
}

listener {
    timeout = 300 # 5min.
    on-timeout = loginctl lock-session
}

# silverspoon {{"{{{"}} {{- if eq .chezmoi.hostname "silverspoon" }}
listener {
    timeout = 90 # 1.5min.
    on-timeout = brightnessctl -s set 50%
    on-resume = brightnessctl -r
}

listener {
    timeout = 150 # 2.5min.
    on-timeout = brightnessctl set 10%
    on-resume = brightnessctl -r
}

listener {
    timeout = 330 # 5.5min.
    on-timeout = systemd-ac-power || hyprctl dispatch dpms off
    on-resume = hyprctl dispatch dpms on && brightnessctl -r
}

listener {
    timeout = 900 # 15 minutes, we testing
    on-timeout = systemd-ac-power || systemctl suspend
    on-resume = hyprctl dispatch dpms on && brightnessctl -r
}
# silverspoon {{"}}}"}} {{- end }}

listener {
    timeout = 3600 # 1h
    on-timeout = systemctl suspend
    on-resume = hyprctl dispatch dpms on && brightnessctl -r
}
