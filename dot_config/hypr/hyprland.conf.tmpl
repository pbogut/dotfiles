# See https://wiki.hypr.land/Configuring/Workspace-Rules/ for workspace rules
#{{ if eq .hostname "redeye" }}
workspace = name:web,monitor:DP-1
workspace = name:code,monitor:DP-1
workspace = name:chat,monitor:HDMI-A-1
workspace = name:zoom,monitor:DP-1
workspace = name:media,monitor:HDMI-A-1
workspace = name:work,monitor:HDMI-A-1
#{{ end }}

# See https://wiki.hypr.land/Configuring/Window-Rules/ for more
windowrule {
  name = vivaldi-personal
  workspace = name:web
  match:class = ^(vivaldi-personal)$
}

windowrule {
  name = alacritty-project
  workspace = name:code
  match:class = ^(Alacritty.project)$
}

windowrule {
  name = windowrule-3
  workspace = name:chat
  no_screen_share = on
  match:class = ^(ferdium)$
}

windowrule {
  name = zoom
  workspace = name:zoom
  no_blur = on
  match:class = ^(zoom)$
}

windowrule {
  name = zoom-in-chrome
  workspace = name:zoom
  match:class = ^(chrome-[a-zA-Z0-9]+\.zoom.us__.*)$
}

windowrule {
  name = teams
  workspace = name:zoom
  match:class = ^(chrome-teams\.microsoft\.com__.*)$
}

windowrule {
  name = youtube-in-brave
  workspace = name:media
  match:class = ^(brave-www.youtube.com__).*$
}

windowrule {
  name = youtube
  workspace = name:media
  sync_fullscreen = 0
  no_screen_share = on
  match:class = ^(youtube)$
}

windowrule {
  name = vivaldi-work
  workspace = name:work
  match:class = ^(vivaldi-work)$
}

windowrule {
  name = discord
  workspace = special:discord
  match:class = ^(com.discordapp.Discord)$
}

windowrule {
  name = equibop
  workspace = special:discord
  match:class = ^(equibop)$
}

windowrule {
  name = deezer
  workspace = special:deezer
  match:class = ^(chrome-www\.deezer\.com__.*)$
}

windowrule {
  name = mutt-no-screen-share
  workspace = special:email
  no_screen_share = on
  match:class = ^(Alacritty.mutt)$
}

windowrule {
  name = brave-ignore-fullscreen
  sync_fullscreen = 0
  match:class = ^(brave-).*$
}

windowrule {
  name = vivaldi-ignore-fullscreen
  sync_fullscreen = 0
  match:class = ^(vivaldi-).*$
}

windowrule {
  name = screensaver
  fullscreen = on
  match:class = Screensaver
}

windowrule {
  name = khal-no-screen-share
  no_screen_share = on
  match:title = ^(khal)$
}

windowrule {
  name = sms-floating-window
  no_screen_share = on
  float = on
  move = ((monitor_w*0.29)) (40)
  size = exact 300
  match:class = ^(org.kde.kdeconnect.sms)$
}

windowrule {
  name = youtube-no-screen-share
  no_screen_share = on
  match:class = ^(brave-www\.youtube\.com__).*$
}

windowrule {
  name = zoom-floating-toolbar
  pin = on
  match:class = ^(zoom)$
  match:title = ^(as_toolbar)$
}

windowrule {
  name = zoom-floating-video-window
  pin = on
  match:class = ^(zoom)$
  match:title = ^(zoom_linux_float_video_window)$
}

windowrule {
  name = localsend-floating
  float = on
  size = 400 700
  match:class = ^(localsend)$
}

windowrule {
  name = hyprland-share-picker
  float = on
  match:class = ^(hyprland-share-picker)$
}

windowrule {
  name = bitwarden-vivaldi-extension
  float = on
  match:title = ^Bitwarden - Vivaldi$
}

windowrule {
  name = chrome-extention-popups
  float = on
  match:class = ^(chrome\-[a-z]+\-Default)$ # extention popups
}


windowrule {
  name = alacritty-floating
  tag = +floating
  match:class = ^(Alacritty.floating)$
}

windowrule {
  name = ghostty-floating
  tag = +floating
  match:class = ^(com.mitchellh.ghostty.floating)$
}

windowrule {
  name = wezterm-floating
  tag = +floating
  match:class = ^(org.wezterm.floating)$
}

windowrule {
  name = nextcloud-floating
  tag = +floating
  match:class = ^(com.nextcloud.desktopclient.nextcloud)$
}

windowrule {
  name = floating-windows
  float = on
  size = 1200 700
  match:tag = floating
}

# Ignore maximize requests from apps. You'll probably like this.
windowrule {
  name = maximize-ignore
  suppress_event = maximize
  match:class = .*
}

# Fix some dragging issues with XWayland
windowrule {
  name = xwayland-fix
  no_focus = on
  match:class = ^$
  match:title = ^$
  match:xwayland = 1
  match:float = 1
  match:fullscreen = 0
  match:pin = 0
}
