###################

# See https://wiki.hypr.land/Configuring/Keywords/
$mainMod = SUPER # Sets "Windows" key as main modifier

# Example binds, see https://wiki.hypr.land/Configuring/Binds/ for more
# Actions
bind = $mainMod SHIFT, Q, killactive,
bind = $mainMod, F, fullscreen, 1
bind = $mainMod SHIFT, F, fullscreen,
bind = $mainMod, Z, fullscreenstate, 0 2 # fake fullscreen
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, SPACE, exec, hypr-togglefloating
bind = $mainMod, TAB, exec, hypr-togglefloatingfocus
bind = $mainMod, R, exec, $menu
# bind = $mainMod SUPER, TAB, workspace, previous
bind = $mainMod, S, togglesplit, # dwindle
# toggles between master and last master, like "swapwithmaster master"
# but keeps swaping same 2 windows every time its pressed
bind = $mainMod, S, exec, hypr-masterbackandforth

bind = $mainMod, bracketright, layoutmsg, cyclenext
bind = $mainMod, bracketleft, layoutmsg, cycleprev

bind = $mainMod, V, exec, hypr-togglemfact 0.5 0.65 0.75
# bind = $mainMod, Y, exec, hypr-youtube
bind = $mainMod CTRL, Y, exec, hypr-youtube reset
bind = $mainMod, Y, exec, hypr-youtube toggle

# Apps
bind = $mainMod, semicolon, exec, fuzzel-run
bind = $mainMod SHIFT, semicolon, exec, fuzzel
bind = $mainMod, apostrophe, exec, ~/.scripts/sway/copyq.sh
bind = $mainMod, W, exec, hypr-windows
bind = $mainMod CTRL, P, exec, tmux-project
bind = $mainMod, Return, exec, $terminal
bind = $mainMod, B, exec, hypr-focusorexec vivaldi-personal browser
bind = $mainMod CTRL, K, exec, terminal-float -t "khal" -e khal interactive
bind = $mainMod CTRL, F, exec, $(hyprctl dispatch "focuswindow class:ferdium") == "ok" || ferdium
bind = $mainMod, T, exec, systray-dmenu
bind = $mainMod, Q, exec, quick-menu

# Screeenshots
bind = Shift, Print, exec, screenshot fullscreen
bind = , Print, exec, screenshot smart
bind = $mainMod, Print, exec, ~/.scripts/record.sh

# Zoom
bind = $mainMod, mouse_down, exec, hyprctl -q keyword cursor:zoom_factor $(hyprctl getoption cursor:zoom_factor | awk '/^float.*/ {print $2 * 1.2}')
bind = $mainMod, mouse_up, exec, hyprctl -q keyword cursor:zoom_factor $(hyprctl getoption cursor:zoom_factor | awk '/^float.*/ {print $2 * 0.8}')
bind = $mainMod, mouse:274, exec, hyprctl -q keyword cursor:zoom_factor 1
bind = $mainMod SHIFT, mouse:273, exec, hyprpicker -a

bind = $mainMod, D, exec, dunstctl context
bind = $mainMod SHIFT, D, exec, dunstctl close

# Move focus with mainMod + arrow keys
bind = $mainMod, Left, movefocus, l
bind = $mainMod, Right, movefocus, r
bind = $mainMod, Up, movefocus, u
bind = $mainMod, Down, movefocus, d

bind = $mainMod, H, exec, hypr-focus left
bind = $mainMod, L, exec, hypr-focus right
bind = $mainMod, K, exec, hypr-focus up
bind = $mainMod, J, exec, hypr-focus down

bind = $mainMod SHIFT, H, movewindow, l
bind = $mainMod SHIFT, L, movewindow, r
bind = $mainMod SHIFT, K, movewindow, u
bind = $mainMod SHIFT, J, movewindow, d

bind = $mainMod, N, workspace, m+1
bind = $mainMod, P, workspace, m-1
bind = $mainMod, C, workspace, emptym
bind = $mainMod SHIFT, N, movetoworkspace, m+1
bind = $mainMod SHIFT, P, movetoworkspace, m-1
bind = $mainMod SHIFT, C, movetoworkspace, emptym

#{{ if eq .hostname "redeye" }}
bind = $mainMod CTRL, L, movecurrentworkspacetomonitor, HDMI-A-1
bind = $mainMod CTRL, H, movecurrentworkspacetomonitor, DP-1
bind = $mainMod , BACKSPACE, movecurrentworkspacetomonitor, DP-1
#{{ else }}
bind = $mainMod CTRL, L, movecurrentworkspacetomonitor, 1
bind = $mainMod CTRL, H, movecurrentworkspacetomonitor, 0
bind = $mainMod , BACKSPACE, movecurrentworkspacetomonitor, 0
#{{ end }}

bind = $mainMod CTRL, J, swapactiveworkspaces, 0 1

# Switch workspaces with mainMod + [0-9]

bind = $mainMod, 1, workspace, name:web
bind = $mainMod, 2, workspace, name:term
bind = $mainMod, 3, workspace, name:chat
bind = $mainMod, 4, workspace, name:code
bind = $mainMod, 5, workspace, name:media
bind = $mainMod, 6, workspace, name:work
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move active window to a workspace with mainMod + SHIFT + [0-9]
bind = $mainMod SHIFT, 1, movetoworkspace, name:web
bind = $mainMod SHIFT, 2, movetoworkspace, name:term
bind = $mainMod SHIFT, 3, movetoworkspace, name:chat
bind = $mainMod SHIFT, 4, movetoworkspace, name:code
bind = $mainMod SHIFT, 5, movetoworkspace, name:media
bind = $mainMod SHIFT, 6, movetoworkspace, name:work
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

bind = $mainMod, G, exec, hypr-cyclespecial
bind = $mainMod CTRL, G, exec, hypr-listspecial
bind = $mainMod SHIFT, G, movetoworkspace, special:magic

# Move/resize windows with mainMod + LMB/RMB and dragging
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Laptop multimedia keys for volume and LCD brightness
bindel = ,XF86AudioRaiseVolume, exec, wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+; level="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print ($2 * 100)}')"; dunstify -r 999999999 "Volume: $level%" --hints="int:value:$level" -i audio-volume-high
bindel = ,XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-; level="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print ($2 * 100)}')"; dunstify -r 999999999 "Volume: $level%" --hints="int:value:$level" -i audio-volume-high
bindel = ,XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindel = SHIFT, XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, brightnessctl -e1 -n2 set 5%+; level="$(brightnessctl -l -c backlight | grep Current | sed 's,.*(\(.*\)%)$,\1,')"; dunstify -r 999999998  "Brightness: ${level}%" --hints="int:value:$level" -i display
bindel = ,XF86MonBrightnessDown, exec, brightnessctl -e1 -n2 set 5%-; level="$(brightnessctl -l -c backlight | grep Current | sed 's,.*(\(.*\)%)$,\1,')"; dunstify -r 999999998  "Brightness: ${level}%" --hints="int:value:$level" -i display

# Requires playerctl
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous

