$power = System: (l) lock, (e) exit, (r) reboot, (s) suspend, (p) poweroff, (b) backup and shutdown, (Esc) cancel
bind = $mainMod CTRL, Q, submap, $power
submap = $power
bind = , L, exec, hyprlock
bind = , L, submap, reset
bind = , E, exit
bind = , E, submap, reset
bind = , R, exec, reboot
bind = , R, submap, reset
bind = , S, exec, systemctl suspend
bind = , S, submap, reset
bind = , P, exec, poweroff
bind = , P, submap, reset
bind = , B, exec, backintime backup & sleep 5s; backintime shutdown
bind = , B, submap, reset
bind = , escape, submap, reset
bind = , catchall, submap, reset
submap = reset

$resize = Resize: (l) right, (h) left, (k) up, (j) down, (Esc) cancel
bind = $mainMod, R, submap, $resize
submap = $resize
binde = , l, resizeactive, 10 0
binde = , h, resizeactive, -10 0
binde = , k, resizeactive, 0 -10
binde = , j, resizeactive, 0 10
bind = , catchall, submap, reset
bind = , escape, submap, reset
submap = reset

