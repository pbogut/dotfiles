set drawbox

set shell zsh
set shellopts '-euy'
set ifs "\n"
set filesep "\n"  # default already

set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# $f:  lf_current_file
# $fs: lf_marked_files
# $fx: lf_current_marked_files
# $id: lf_client_id

cmd trash %{{
  echo "trash-put? [y] "
  read -r confirm
  echo $confirm
  if [[ $confirm == 'y' ]]; then
    trash-put $fx
  fi
}}

cmd mkdir %{{
  echo -n "mkdir -p "
  read -r dir
  mkdir -p "$dir"
  lf -remote "send $id select $dir"
}}

cmd umount %{{
  umount $f
  #lf -remote "send $id reload"
}}

cmd extract %{{
  dest=${f%.*}
  dest=${dest// /_}
  case "$f" in
    *.zip)
    unzip "$f" -d "$dest"
    ;;
  esac
  lf -remote "send $id select $dest"
}}

cmd open $set -f; rifle -p 0 $f
cmd openall $set -f; rifle -p 0 $fx

map x extract
map <c-o> %$HOME/.scripts/sway/open $f
map o open
map O openall

map K mkdir
map T trash
map D trash
map R reload
map S $zsh

cmd go_media %{{
  dest="/run/media/$USER"
  lf -remote "send $id cd $dest"
}}

cmd go_faktury %{{
  dest="$HOME/Documents/Axolit/Faktury/$(date '+%Y/%m')"
  mkdir -p "$dest"
  lf -remote "send $id cd $dest"
}}

cmd go_project ${{
  clear
  project="$(ls-project | fzf)"
  if [[ ! $project == "" ]]; then
    dest="$HOME/Projects/$project"
    touch -h "$dest"
    lf -remote "send $id cd $dest"
  fi
}}

map gw cd ~/Work
map gd cd ~/Documents
map gD cd ~/Downloads
map gn cd ~/Nextcloud
map gp go_project
map gm go_media
map gf go_faktury
map gs cd ~/Pictures/screenshots

map <enter> open
