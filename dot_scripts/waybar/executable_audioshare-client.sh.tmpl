toggle=false
if [[ $1 == 'toggle' ]]; then
  toggle=true
fi

if pgrep -f -x "audio-share-go-client 192.168.1.102 --autoreconnect" >/dev/null; then
  if $toggle; then
    pkill -f -x "audio-share-go-client 192.168.1.102 --autoreconnect"
    echo ""
  else
    echo ""
  fi
else
  if $toggle; then
    (
    audio-share-go-client 192.168.1.102 --autoreconnect >/dev/null 2>&1
    pkill -RTMIN+20 -x waybar # refresh after it dies, TODO: make it json or something
    ) &
    echo ""
  else
    echo ""
  fi
fi
