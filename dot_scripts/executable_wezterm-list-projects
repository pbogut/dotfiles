#!/usr/bin/env bash
#=================================================
# name:   wezterm-list-projects
# author: author <author_contact>
# date:   04/01/2024
#=================================================
usage() {
  echo "Ussage: ${0##*/} <ACTION> [OPTIONS]"
  echo ""
  echo "Options:"
  echo "  -h, --help     display this help and exit"
}

while test $# -gt 0; do
  case "$1" in
    --help|-h)
      usage
      exit 0
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

project=false
if [[ $TERM == "dumb" || $TERM == "linux" ]]; then
    project=$(ls-project | sed -E "s;(.*);\1\x00icon\x1f$ICONS/git.svg;" | fuzzel --dmenu --no-sort --search "$1" --cache /dev/null)
else
    project=$(ls-project | fzf -q "$1" --height=100%)
fi


if [[ $project != "" ]]; then
    cd "$PROJECTS/$project" || exit
    touch -h "$PROJECTS/$project"
    nohup wezterm-project "$PWD" "$(wezterm-status "$PWD" --title)" > /dev/null
    # disown
fi
