#!/usr/bin/env bash
#=================================================
# name:   chromium-start
# author: Pawel Bogut <pbogut@pbogut.me>
# date:   17/08/2024
#=================================================
if [[ -z "$*" ]]; then
    focus-or-exec "vivaldi-personal" \
        vivaldi \
        --enable-features=UseOzonePlatform \
        --ozone-platform=wayland \
        --class=vivaldi-personal \
        --profile-directory=Default \
        "$@"
else
    vivaldi \
        --enable-features=UseOzonePlatform \
        --ozone-platform=wayland \
        --class=vivaldi-personal \
        --profile-directory=Default \
        "$@"
fi
